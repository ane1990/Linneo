<h1> Products </h1>

<% @types.each do |t| %>
	<% @products.each do |p| %>
		<% if p.type_id == t.id then %>
 			<p> <%= t.name %> </p>
			<% break %>
		<% end %>
	<% end %>
	<% @products.each do |p| %>
		<% if p.type_id == t.id then %>
			<p> <%= link_to p.name, product_path(p) %> </p>
		<% end %>
	<% end %>
<% end %>
<p> <%= link_to "Back to Product Range", categories_path()%>
